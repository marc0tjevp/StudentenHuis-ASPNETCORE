@model Meal

<div class="row">
    <div class="col-12">
        @if (Model != null)
        {
            <h1>@Model.Title aanpassen</h1>
            <div class="text-danger" asp-validation-summary="All"></div>
            @if (Model.Eaters.Count == 0)
            {
                @using (Html.BeginForm("EditMeal", "Meal"))
                {
                    @Html.Hidden("ID", Model.ID)
                    @Html.Hidden("Date", Model.Date)
                    <div class="form-group">
                        @Html.LabelFor(e => e.Title, "Titel")
                        @Html.EditorFor(e => e.Title, new { htmlAttributes = new { @class = "form-control" }, })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(e => e.Description, "Beschrijving")
                        @Html.EditorFor(e => e.Description, new { htmlAttributes = new { @class = "form-control" }, })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(e => e.Date, "Datum en tijd")
                        <p>@Model.Date.Date</p>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(e => e.MaxAmountOfGuests, "Maximaal aantal gasten")
                        @Html.EditorFor(e => e.MaxAmountOfGuests, new { htmlAttributes = new { @class = "form-control" }, })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(e => e.Price, "Prijs per bezoeker")
                        @Html.EditorFor(e => e.Price, new { htmlAttributes = new { @class = "form-control" }, })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn-dark btn btn-block">Maaltijd aanpassen</button>
                    </div>
                }
            }
            else
            {
                <p>Deze maaltijd bevat al mee-eters, je kunt niets meer aanpassen</p>
            }
        }
        else
        {
            <h1>Maaltijd bestaat niet</h1>
            <p>Deze maaltijd bestaat niet</p>

        }
    </div>
</div>