@model MealButtonViewModel

@switch (Model.Affiliation)
{
    case "Default":
        @using (Html.BeginForm("JoinMeal", "Meal"))
        {
            @Html.Hidden("MealID", Model.Meal.ID)
            <input type="submit" class="btn-dark btn btn-block" value="Join" />
        }
        break;
    case "IsCook":
        <a asp-controller="Meal" asp-action="EditMeal" asp-route-id="@Model.Meal.ID"><input class="btn-dark btn btn-block" value="Edit"></a>
        @using (Html.BeginForm("DeleteMeal", "Meal"))
        {
            @Html.Hidden("MealID", Model.Meal.ID)
            <input type="submit" class="text-danger btn-dark btn btn-block" value="Delete" />
        }
        break;
    case "Eater":
        @using (Html.BeginForm("LeaveMeal", "Meal"))
        {
            @Html.Hidden("MealID", Model.Meal.ID)
            <input type="submit" class="text-warning btn-dark btn btn-block" value="Leave" />
        }
        break;
    case "Full":
        <input type="submit" class="text-danger btn-dark btn btn-block" value="Full" />
        break;
    default:
    case "IsCookAndNotEmpty":
    case "NotLoggedIn":

        break;
}