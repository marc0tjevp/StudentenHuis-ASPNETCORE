@model SideBarViewModel

<div class="row">
    <div class="col-md-12">
        @if (Model.User != null)
        {

            <h2>Welkom terug!</h2>
            <p>Je bent momenteel ingelogd als <b>@Model.User.Fullname()</b></p>
            <button class="btn btn-dark btn-block"><a asp-action="Logout" asp-controller="Account">Uitloggen</a></button>
        }
        else
        {
            <h3>Welkom bij het StudentenHuis!</h3>
            <p>Het lijkt erop dat je helaas niet ingelogd bent op het moment, hierom kunnen we je helaas enkel maar een beperkt aantal data laten zien.</p>
            <button class="btn btn-dark btn-block"><a asp-action="Login" asp-controller="Account">Inloggen</a></button>
            <button class="btn btn-dark btn-block"><a asp-action="Register" asp-controller="Account">Registreren</a></button>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <h2>Vandaag:</h2>
        @if (Model?.Today == null)
        {

            <p>Er staat voor vandaag (nog) geen maaltijd gepland :(</p>
        }
        else
        {
            @Html.Partial("MealSummary", Model.Today)
        }
    </div>
</div>