<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StudentenHuis - @(ViewData["title"] ?? "Time to eat!")</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" asp-href-include="~/css/bundle.css" />
    <link rel="shortcut icon" asp-href-include="/favicon.png">
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg mainnav">
            <a href="/" class="navbar-brand">Student Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" />
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav mr-auto">
                    <a class="nav-item nav-link" asp-action="Index" asp-controller="Meal">Meals</a>
                    <a class="nav-item nav-link" asp-action="Index" asp-controller="Account">Users</a>
                    <a class="nav-item nav-link" asp-action="NewMeal" asp-controller="Meal">Add a new meal</a>
                </div>
            </div>
        </nav>
        <div class="row">
            <main class="col-md-8">
                @RenderBody()
            </main>
            <aside class="col-md-4">
                @await Component.InvokeAsync("Sidebar")
            </aside>
        </div>
        <div style="margin-top: 10em"></div>
        <footer class="fixed-bottom text-center">
            © Heijden Solutions 2018
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
</body>
</html>
